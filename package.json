{
  "name": "lodgify-automation-qa-test",
  "description": "Lodgify QA automation challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GilbertoGNG/Lodgify-Automation-QA-Test.git"
  },
  "author": "Lodgify QA Team",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^9.0.0"
  },
  "scripts": {
    "dev-server": "node server/server.js",
    "install-all": "npm install && cd server && npm install",
    "cy:open": "npx cypress open",
    "cy:run": "npx cypress run --browser chrome",
    "cy:getmochawesomereport": "cypress run --spec '**/*.test.js' --reporter mochawesome",
    "cy:getjunitreport": "cypress run --spec '**/*.test.js'  --config-file prod.json --reporter junit",
    "cy:runsmokeinprodenv": "cypress run --spec '**/*.test.js' --config-file 'prod.json' --reporter mochawesome"
  },
  "dependencies": {
    "mochawesome": "^7.0.1"
  }
}
